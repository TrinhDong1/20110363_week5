<h2>{{post.title}}</h2>
<p>{{post.content}}</p>
<h3>Comments</h3>
<ul>
  {{#each post.comments}}
    <li>{{this}}</li>
  {{/each}}
</ul>
<form action="/post/{{post.id}}/comment" method="POST">
  <label for="comment">Add a Comment:</label>
  <input type="text" name="comment" required>
  <button type="submit">Comment</button>
</form>
